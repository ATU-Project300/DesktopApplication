<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Odyssey" Height="450" Width="800"
        MinHeight="425" MinWidth="750">
    <Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="10*"></RowDefinition>
        <RowDefinition Height="85*"></RowDefinition>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="25*"></ColumnDefinition>
        <ColumnDefinition Width="90*"></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <!-- <ListBox Name="ListBox" Grid.Row="1" Grid.Column="1" Height="180" VerticalAlignment="Top"></ListBox> -->
    <DataGrid Name="DataGrid" Grid.Row="1" Grid.Column="1" Margin="5" CanUserAddRows="False" CanUserDeleteRows="False" ></DataGrid>
    <Button Name="SearchBTN" Grid.Row="0" Grid.Column="1" Width="60" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">Search</Button>
    <TextBox Name="SearchTxBx" Grid.Row="0" Grid.Column="1" Width="400" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" TextChanged="TextBox_TextChanged"></TextBox>
    <Button Name="SettingsBTN" Grid.Row="0" Grid.Column="0" Width="60" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Click="SettingsButtonClick">Settings</Button>
    <Label Name="TitleLBL" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">Home</Label>
    <Button Name="RecentBTN" Grid.Row="1" Grid.Column="0" Height="40" Width="100" Margin="0,100" VerticalAlignment="Top">Recent</Button>
    <Button Name="AllGamesBTN" Grid.Row="1" Grid.Column="0" Height="40" Width="100" VerticalAlignment="Center">All games</Button>
    <Button Name="SavedBTN" Grid.Row="1" Grid.Column="0" Height="40" Width="100" Margin="0,0,0,100" VerticalAlignment="Bottom">Saved</Button>
    </Grid>
</Window>
